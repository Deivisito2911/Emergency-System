{
  "extends": "../tsconfig.base.json",
  "files": [],
  "compilerOptions": {
    "types": ["jest"],
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/tests",
    "src/__mocks__"
  ]
}
